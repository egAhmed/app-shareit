<?xml version="1.0" encoding="UTF-8"?>
<site>
  <form>
    <input type="TextLine" name="domain">
      <label>Site url you want to use in the application. Example https://mysite.com</label>
      <occurrences minimum="1" maximum="1"/>
    </input>

    <item-set name="linkedin">
      <label>Linkedin app</label>
      <occurrences minimum="0" maximum="1" />
      <items>
        <input type="textline" name="page_name">
          <label>Page name</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="app_id">
          <label>Client id</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="app_secret">
          <label>Client secret</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </item-set>

    <item-set name="facebook">
      <label>Facebook app</label>
      <occurrences minimum="0" maximum="1" />
      <items>
        <input type="textline" name="page_id">
          <label>Page id</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="app_id">
          <label>App id</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="app_secret">
          <label>App secret</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </item-set>

    <item-set name="twitter">
      <label>Twitter</label>
      <items>
        <input type="textline" name="consumer_key">
          <label>Api key</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="consumer_secret">
          <label>Api secret key</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="user_token">
          <label>Access token</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="textline" name="user_secret">
          <label>Access token secret</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </item-set>
  </form>
</site>
